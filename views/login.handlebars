<div class="row">

  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form loginForm">
      <div class="form-group">
        <label for="loginEmail">Email:</label>
        <input class="form-input" type="text" id="loginEmail" />
      </div>
      <div class="form-group">
        <label for="loginPassword">Password:</label>
        <input class="form-input" type="password" id="loginPassword" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>


  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signupForm">
      <div class="form-group">
        <label for="signupName">Name:</label>
        <input class="form-input" type="text" id="signupName" />
      </div>
      <div class="form-group">
        <label for="signupEmail">Email:</label>
        <input class="form-input" type="text" id="signupEmail" />
      </div>
      <div class="form-group">
        <label for="signupPassword">Password:</label>
        <input class="form-input" type="password" id="signupPassword" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="../public/js/login.js"></script>
